{
    "name": "pnz/twig-extension-number",
    "type": "library",
    "description": "A Twig extension for number formatting",
    "keywords": [
        "i18n",
        "number"
    ],
    "homepage": "https://github.com/thePanz/Twig-Extension-Number",
    "license": "MIT",
    "authors": [
        {
            "name": "thePanz",
            "email": "thepanz@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "twig/twig": "^2.4 || ^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.5"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Pnz\\TwigExtensionNumber\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    }
}